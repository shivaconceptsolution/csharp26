<Window x:Class="WpfControlExample.BorderControlExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BorderControlExample" Height="300" Width="300">

    <Border  BorderBrush="Red" BorderThickness="3" CornerRadius="8,8,3,3">
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="LightCyan" Offset="1.0" />
                <GradientStop Color="LightBlue" Offset="0.5" />
                <GradientStop Color="DarkTurquoise" Offset="0.0" />
            </LinearGradientBrush>
        </Border.Background>


        <StackPanel Margin="10">
            <Button>Button 1</Button>
            <Button Margin="0,10">Button 2</Button>
            <Button>Button 3</Button>
        </StackPanel>
        </Border>

    
</Window>
