<Window x:Class="WpfControlExample.GroupBoxExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GroupBoxExample" Height="305.639" Width="552.632">
    <Grid>
        <GroupBox  Margin="10" Padding="10">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="logo2.png" Margin="3,0" />
                    <TextBlock FontWeight="Bold">GroupBox Sample</TextBlock>
                </StackPanel>
            </GroupBox.Header>

            <StackPanel>
                <TextBlock>First name:</TextBlock>
                <TextBox />
                <TextBlock>Last name:</TextBlock>
                <TextBox />
                <Button Margin="0,20">Add User</Button>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
